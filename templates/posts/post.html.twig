{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Post - {{ post.id }}{% endblock %}

{% block body %}
{{ parent() }}
{# {{ dump(coment_post) }} #}

	<div class="container bg-white rounded my-3 p-4">
        <div class="d-flex bd-highlight">
            <div class="p-2 flex-grow-1 bd-highlight">
                <h3>{{ post.titulo }}</h3>
                <div class="my-3" style="color:#3282b8;">
                    <i class="fa fa-thumbs-up"></i><strong>{{ post.likes }}</strong>
                </div>
                <div class="text-secondary">
                    <i class="far fa-clock text-secondary"></i>
                    <strong>Fecha de publicaci√≥n: {{post.fechapublicacion | date}}</strong>
                </div>
            </div>
            {% if post.foto %}
            <div class="p-2 bd-highlight">
                <div class="align-self-center">
                    <img class="rounded" src="{{ asset('uploads/photos/'~post.foto) }}" width="150px">
                </div>
            </div>
            {% endif %}
        </div>
        <hr>
        <div class="text-justify my-3">
             {{ post.contenido }}
        </div>
    </div>

        <div class="container">
        {% if app.user %}
            {{ form(form) }}
        {% endif %}
        <h1>Coments</h1>
        {% if coment_post %}
            {% for coment in coment_post %}
                <div class="container bg-white rounded my-3 p-2">
                    <h5>{{coment.comentario}}</h5>
                    <small class="text-secondary">By: {{ coment.nombre }}</small>
                </div>
            {% endfor %}
        {% else %}
            <p>No hay comentarios</p>
        {% endif %}
        </div>

{% endblock %}
